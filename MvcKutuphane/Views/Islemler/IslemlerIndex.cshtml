@using MvcKutuphane.Models.Entity
@model List<Tbl_Hareket>
@{
    ViewBag.Title = "IslemlerIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover text-center">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>ALINAN KİTAP</th>
            <th>KİTABI ALAN ÜYE</th>
            <th>KİTABI VEREN PERSONEL</th>
            <th>KITAP ALIS TARIHI</th>
            <th>UYENİN GETİRDİĞİ TARIH</th>
        </tr>
    </thead>
    <tbody class="table-secondary ">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Tbl_Kitap.AD</td>
                <td>@item.Tbl_Uyeler.AD @item.Tbl_Uyeler.SOYAD</td>
                <td>@item.Tbl_Personel.PERSONEL</td>
                <td>@Convert.ToDateTime(item.ALISTARIHI).ToString("dd/MM/yyyy") </td>
                <td>@Convert.ToDateTime(item.UYEGETIRTARIH).ToString("dd/MM/yyyy") </td>
            </tr>
        }
</table>


