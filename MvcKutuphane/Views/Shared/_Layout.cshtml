<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous" />

    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: #f1f1f1;
                }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a href="#"><i class="fa fa-home"></i>&nbsp;&nbsp;Anasayfa</a>
        <a href="~/Kategori/KategoriIndex"><i class="fa fa-bars"></i>&nbsp;&nbsp;Kategoriler</a>
        <a href="~/Kitap/KitapList"><i class="fa fa-book"></i>&nbsp;&nbsp;Kitaplar</a>
        <a href="~/Yazar/IndexListe"><i class="fa-solid fa-file-pen"></i>&nbsp;&nbsp;Yazarlar</a>
        <a href="~/Uyeler/UyeListesi"><i class="fa fa-user"></i>&nbsp;&nbsp;Üyeler</a>
        <a href="~/Personel/PersonelListe"><i class="fa-solid fa-person"></i>&nbsp;&nbsp;Personeller</a>
        @if (User.IsInRole("A"))
        {
            <a href="~/Odunc/OdunVer"><i class="fa-solid fa-hand-holding"></i>&nbsp;&nbsp;Ödüç Kitap Ver</a>
            <a href="~/Odunc/HareketLisesi"><i class="fa-solid fa-hands-praying"></i>&nbsp;&nbsp;Ödüç Kitap Al</a>
        }
        <a href="#"><i class="fa-solid fa-dollar-sign"></i>&nbsp;&nbsp;Kasa</a>
        <a href="~/Istatik/Index"><i class="fa-solid fa-chart-simple"></i>&nbsp;&nbsp;İstatikler</a>
        <a href="~/Islemler/IslemlerIndex"><i class="fa-solid fa-chart-line"></i>&nbsp;&nbsp;İşlemler</a>
        <a href="~/Duyurular/DuyuruOlustur"><i class="fa-solid fa-chart-line"></i>&nbsp;&nbsp;Duyuru Oluştur</a>
        <a href="~/webhava/index.html">Web Hava</a>
        <a href="~/Galeri/Index"><i class="fa-solid fa-image"></i>&nbsp;&nbsp;Galeri</a>
        <a href="~/Istatik/LinqCard"><i class="fa-solid fa-id-card"></i>&nbsp;&nbsp;Linq Kart</a>
        <a href="~/Vitrin/Index"><i class="fa-solid fa-book-open-reader"></i>&nbsp;&nbsp;Vitrin</a>
        <a href="~/Grafik/Index"><i class="fa-solid fa-chart-line"></i>&nbsp;&nbsp;Grafikler</a>
        <a href="#"><i class="fa-solid fa-gear"></i>&nbsp;&nbsp;Ayarlar</a>
        <a href="~/Panelim/LoginOut"><i class="fa-solid fa-xmark"></i>&nbsp;&nbsp;Çıkış</a>

    </div>

    <div class="main">
        @RenderBody()
    </div>



</body>

</html>
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
